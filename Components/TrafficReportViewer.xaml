                                <TextBlock Text="{DynamicResource i18n_tRTxExcessiveCollisions}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=TxExcessiveCollisions}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRDeviceType}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=DeviceType}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRVendor}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Vendor}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRMacAddressList}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=MacAddressesString}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}"
                                        ToolTip="{Binding Path=MacAddresses, Converter={StaticResource MacListToTooltipConverter}}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Border Grid.Row="3" Margin="8" Padding="0" Style="{DynamicResource gridBorder}">
                    <TextBlock Text="{DynamicResource i18n_tRLldpDevices}" Style="{DynamicResource aboutParagraph}" Margin="8" Padding="0" />
                </Border>
                <DataGrid Grid.Row="4" x:Name="_lldpPortsGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="8" Padding="0" MinHeight="100" MaxHeight="225"
            Style="{DynamicResource defaultGrid}"
            ColumnHeaderStyle="{DynamicResource gridHeader}"
            CellStyle="{DynamicResource gridCell}"
            Width="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            HorizontalContentAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="Auto" MinWidth="100">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRPort}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Port}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto" MinWidth="100">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRAlias}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Alias}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" MinWidth="240">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRType}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Type}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto" MinWidth="100">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRName}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Name}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="*" MinWidth="240">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRDescription}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=Description}" Style="{DynamicResource toolTip}" Foreground="{DynamicResource fontColor}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto" MinWidth="100">
                            <DataGridTemplateColumn.Header>
                                <TextBlock Text="{DynamicResource i18n_tRIpAddress}" />
                            </DataGridTemplateColumn.Header>
                            <DataGridTemplateColumn.CellTemplate>
