                    <TextBlock Text="{DynamicResource i18n_tRTransceivers}" Style="{DynamicResource aboutParagraph}" Margin="8" Padding="0" />
                </Border>
                <DataGrid Grid.Row="6" x:Name="_transceiversGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="8" Padding="0" MinHeight="100" MaxHeight="225"
            Style="{DynamicResource defaultGrid}"
            ColumnHeaderStyle="{DynamicResource gridHeader}"
            CellStyle="{DynamicResource gridCell}"
            Width="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            HorizontalContentAlignment="Stretch">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="Auto" MinWidth="100">
